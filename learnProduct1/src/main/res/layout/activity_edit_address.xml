<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_bar" />

    <ScrollView
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout style="@style/linear_item_style" >

                <TextView
                    style="@style/add_address_tv_style"
                    android:text="@string/consignee" />

                <com.wangyi.lelegou.maofengqi.view.CustomClearEditText
                    android:id="@+id/et_consignee"
                    style="@style/add_address_info_style"
                    android:inputType="text" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <LinearLayout style="@style/linear_item_style" >

                <TextView
                    style="@style/add_address_tv_style"
                    android:text="@string/phone_number" />

                <com.wangyi.lelegou.maofengqi.view.CustomClearEditText
                    android:id="@+id/et_phone_number"
                    style="@style/add_address_info_style"
                    android:inputType="phone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <LinearLayout style="@style/linear_item_style" >

                <TextView
                    style="@style/add_address_tv_style"
                    android:text="@string/province" />

                <TextView
                    android:id="@+id/tv_province"
                    style="@style/add_address_info_style"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <LinearLayout style="@style/linear_item_style" >

                <TextView
                    style="@style/add_address_tv_style"
                    android:text="@string/city" />

                <TextView
                    android:id="@+id/tv_city"
                    style="@style/add_address_info_style"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <LinearLayout style="@style/linear_item_style" >

                <TextView
                    style="@style/add_address_tv_style"
                    android:text="@string/district" />

                <TextView
                    android:id="@+id/tv_district"
                    style="@style/add_address_info_style"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <LinearLayout style="@style/linear_item_style" >

                <TextView
                    style="@style/add_address_tv_style"
                    android:text="@string/address" />

                <EditText
                    android:id="@+id/et_address"
                    style="@style/add_address_info_style"
                    android:inputType="text" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <LinearLayout style="@style/linear_item_style" >

                <TextView
                    style="@style/add_address_tv_style"
                    android:layout_width="100dp"
                    android:text="@string/is_default" />

                <View style="@style/add_address_info_style" />

                <CheckBox
                    android:id="@+id/check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <LinearLayout style="@style/linear_item_style" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/layout_delete_address"
                style="@style/linear_item_style.clickable"
                android:visibility="gone" >

                <TextView
                    style="@style/add_address_tv_style"
                    android:layout_width="100dp"
                    android:text="@string/delete_address"
                    android:textColor="@color/red" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>