<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff0f2f5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include layout="@layout/tm_v_title" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f5fff2"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2.0dip" >
	
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/tm_i_10"
                android:gravity="center|left"
                android:text="购买出现问题,请联系24小时客服"
                android:textColor="#63ca2c"
                android:textSize="12.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tm_t_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:drawableLeft="@drawable/tm_i_7"
                    android:gravity="center|left"
                    android:text="客服电话:\n010-57010221"
                    android:textColor="#666666"
                    android:textSize="11.0sp" />

                <LinearLayout
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="20dp" >

                    <LinearLayout
                        android:layout_width="1.0dip"
                        android:layout_height="25.0dip"
                        android:background="#b8e1a5"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tm_t_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:drawableLeft="@drawable/tm_i_8"
                    android:gravity="center|left"
                    android:text="客服微信:\n2847604950"
                    android:textColor="#666666"
                    android:textSize="11.0sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="#b8e3a6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25.0dip"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:text="商品名称:"
                android:textColor="#ff888888"
                android:textSize="14.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tm_t_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textSize="14.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="25.0dip"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:text="应付金额:"
                android:textColor="#ff888888"
                android:textSize="14.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tm_t_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0.5元"
                android:textColor="#63ca2c"
                android:textSize="14.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="#E3E7EB" />
		
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_margin="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="#E3E7EB" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="42.0dip"
                android:orientation="horizontal"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip" >

                <RadioGroup
                    android:id="@+id/tm_r_type"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/tm_r_0"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="购卡支付"
                        android:textColor="@drawable/tm_r_2"
                        android:textSize="15.0sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/tm_f_l1"
                        android:layout_width="1.0dip"
                        android:layout_height="30.0dip"
                        android:background="#E3E7EB"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" />

                    <RadioButton
                        android:id="@+id/tm_r_1"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:button="@null"
                        android:gravity="center"
                        android:text="卡密支付"
                        android:textColor="@drawable/tm_r_2"
                        android:textSize="15.0sp"
                        android:textStyle="bold" />
                </RadioGroup>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25.0dip"
                android:background="#f5fff2" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="极速充,自动完成购卡支付,优惠多多!"
                    android:textColor="#63ca2c"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.0dip"
                android:background="#b8e1a5" />

            <fragment
                android:id="@+id/tm_f_main"
                android:name="com.tm.plugin.alipay.TM_F_Main"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />

            <fragment
                android:id="@+id/tm_f_buy"
                android:name="com.tm.plugin.alipay.TM_F_Buy"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tm_f_l0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#88000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="140.0dip"
            android:layout_height="140.0dip"
            android:background="@drawable/tm_c_2"
            android:gravity="center"
            android:orientation="vertical" >

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10.0dip" />

            <TextView
                android:id="@+id/tm_p_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在加载..."
                android:textColor="#FFFFFF"
                android:textSize="15.0sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>