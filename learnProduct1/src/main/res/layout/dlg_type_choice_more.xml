<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="@drawable/ic_show_title_dlg_bg">

    <TextView
            android:layout_marginTop="8dp"
            android:text="取该商品最后购买时间前网站所有商品的最后100条购买时间记录；"
            android:padding="5dp"
            android:textSize="@dimen/h6"
            android:drawableLeft="@drawable/ic_dlg_tip1"
            android:textColor="@color/black_common_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View
            style="@style/divider_horizontal_style" />

    <TextView
            android:text="每个时间记录按时、分、秒、毫秒依次排列取数值；"
            android:padding="5dp"
            android:textSize="@dimen/h6"
            android:drawableLeft="@drawable/ic_dlg_tip2"
            android:textColor="@color/black_common_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <View
            style="@style/divider_horizontal_style" />

    <TextView
            android:text="将这100个数值之和除以该商品总参与人次后取余数，余数加上10000000 即为“幸运码”。"
            android:padding="5dp"
            android:textSize="@dimen/h6"
            android:drawableLeft="@drawable/ic_dlg_tip3"
            android:textColor="@color/black_common_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>