<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/area_index_second_item"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bg_common_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/iv_index_second_item_pic"
                    android:src="@drawable/ic_no_loading_default"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"/>
            <TextView
                    android:id="@+id/tv_index_second_item_status"
                    android:text="已结束"
                    android:textSize="@dimen/h5"
                    android:textColor="@color/white"
                    android:background="@color/bg_common_red_color"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/iv_index_second_item_pic2"
                        android:src="@drawable/ic_user_head"
                        android:visibility="gone"
                        android:layout_marginRight="5dp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"/>
                <TextView
                        android:id="@+id/tv_index_second_item_info"
                        android:text=""
                        android:textSize="@dimen/h5"
                        android:textColor="@color/black_light_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/tv_index_second_item_price"
                    android:text="价格"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/h5"
                    android:textColor="@color/black_light_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <ProgressBar
                    android:id="@+id/pb_index_second_item_bar"
                    style="@style/pb_style"
                    android:layout_marginTop="4dp"
                    android:max="100"
                    android:progress="0"/>

            <FrameLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_index_second_item_join"
                        android:text="0"
                        android:textColor="@color/bg_common_red_color"
                        android:textSize="@dimen/h4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_index_second_item_all"
                        android:text="0"
                        android:textColor="@color/black_light"
                        android:textSize="@dimen/h4"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_index_second_item_release"
                        android:text="0"
                        android:textColor="@color/blue_main"
                        android:textSize="@dimen/h4"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </FrameLayout>
            <FrameLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="已参与"
                        android:textColor="@color/black_light_color"
                        android:textSize="@dimen/h5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="总需人次"
                        android:textColor="@color/black_light_color"
                        android:textSize="@dimen/h5"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="剩余"
                        android:textColor="@color/black_light_color"
                        android:textSize="@dimen/h5"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

