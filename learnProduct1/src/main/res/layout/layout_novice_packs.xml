<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_all_rounded_normal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="16dp"
            android:src="@drawable/ic_close" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bg_coupon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33dp"
            android:text="输入邀请码，赠送1次夺宝机会"
            android:textColor="@color/bg_common_orange_red"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_invitation_code"
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37dp"
            android:background="@drawable/bg_register_gray_radius"
            android:hint="请输入邀请码"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_receive"
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="37dp"
            android:background="@drawable/bg_btn_orange_red_radius"
            android:gravity="center"
            android:text="领取福利"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>