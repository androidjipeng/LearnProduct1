<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="@dimen/default_layout_padding_big"
    android:layout_marginLeft="@dimen/default_layout_padding_medium"
    android:layout_marginRight="@dimen/default_layout_padding_medium"
    android:layout_marginBottom="@dimen/default_layout_padding_big"
    android:visibility="gone"
    android:id="@+id/ll_old_award_information"
    android:background="@drawable/white_corners"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/old_usr_img"
                    android:src="@drawable/ic_user_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/label_now" />
        </FrameLayout>

        <View style="@style/divider_vertical_style" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_marginTop="@dimen/default_layout_padding_medium"
                android:text="总共乐乐购"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/old_times"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="人次"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View style="@style/divider_vertical_style" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_marginTop="@dimen/default_layout_padding_medium"
                android:text="揭晓时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/open_time"
                android:text="2017.03.15 22：30：56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View style="@style/divider_vertical_style" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_marginTop="@dimen/default_layout_padding_medium"
                android:text="乐乐购时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/buy_time"
                android:text="2017.03.15 22：30：56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View style="@style/divider_horizontal_style" />
    <RelativeLayout
        android:layout_marginLeft="@dimen/default_layout_padding_medium"
        android:layout_marginRight="@dimen/default_layout_padding_medium"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dubao"
            android:layout_alignParentLeft="true"
            android:text="幸运夺宝码："
            android:layout_marginTop="@dimen/default_layout_padding_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dubao_code"
            android:layout_marginTop="@dimen/default_layout_padding_medium"
            android:layout_toRightOf="@+id/dubao"
            android:text="0000002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_check_result"
            android:background="@drawable/btn_computer_result"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>