<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_corners"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="6dp"
        android:text="提示"
        android:textColor="@color/black"
        android:textSize="18sp" >
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray" >
    </View>

    <TextView
        android:id="@+id/tv_show_info_dlg_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.56"
        android:maxLines="5"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/h4" >
    </TextView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_confirm_dlg_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_common_red_selector"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="取消"
            android:textColor="@drawable/font_white_black_change_selector"
            android:textSize="@dimen/h3" >
        </TextView>

        <TextView
            android:id="@+id/btn_confirm_dlg_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_common_red_selector"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="确定"
            android:textColor="@drawable/font_white_black_change_selector"
            android:textSize="@dimen/h3" >
        </TextView>
    </LinearLayout>

</LinearLayout>