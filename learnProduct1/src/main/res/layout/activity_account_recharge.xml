<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wangyi.lelegou.maofengqi.ui.activity.ShoppingflowActivity.AccountRechargeActivity">
    <include layout="@layout/layout_title_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="您的当前乐豆："
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/current_leledouNum"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="855558.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:text="个"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cutline" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout

        android:id="@+id/ll_Nun10"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/select_corners_ll_style"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_money10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10" />
        <TextView
            android:text="个"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Nun20"
        android:layout_margin="15dp"
        android:background="@drawable/white_corners"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_money20"
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="个"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_Nun30"
        android:layout_margin="15dp"
        android:background="@drawable/white_corners"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_money30"
            android:text="30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="个"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_Nun100"
            android:layout_margin="15dp"
            android:background="@drawable/white_corners"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_money100"
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="个"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_Nun200"
            android:layout_margin="15dp"
            android:background="@drawable/white_corners"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_money200"
                android:text="200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="个"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_Nums"
            android:layout_margin="15dp"
            android:background="@drawable/white_corners"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center">
            <EditText
                android:numeric="integer"
                android:id="@+id/et_get_Num"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:maxEms="7"
                android:lines="1"
                android:background="@null"
                android:hint="输入个数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <RadioGroup
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_margin="15dp"
                android:background="@drawable/select_corners_ll_style"
                android:button="@null"
                android:layout_width="100dp"
                android:layout_height="30dp" />
            <RadioButton
                android:layout_margin="15dp"
                android:background="@drawable/select_corners_ll_style"
                android:button="@null"
                android:layout_width="100dp"
                android:layout_height="30dp" />
            <RadioButton
                android:layout_margin="15dp"
                android:background="@drawable/select_corners_ll_style"
                android:button="@null"
                android:layout_width="100dp"
                android:layout_height="30dp" />
        </RadioGroup>
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_margin="15dp"
                android:background="@drawable/select_corners_ll_style"
                android:button="@null"
                android:layout_width="100dp"
                android:layout_height="30dp" />
            <RadioButton
                android:layout_margin="15dp"
                android:background="@drawable/select_corners_ll_style"
                android:button="@null"
                android:layout_width="100dp"
                android:layout_height="30dp" />
            <LinearLayout
                android:layout_margin="15dp"
                android:background="@drawable/white_corners"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center">
                <EditText
                    android:id="@+id/et_get_Num1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:maxEms="7"
                    android:lines="1"
                    android:background="@null"
                    android:hint="输入个数"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RadioGroup>
    </RadioGroup>



    <RelativeLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/white_corners">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/alipay_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alipay" />
        <TextView

            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/alipay_img"
            android:text="支付宝" />

        <CheckBox
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:id="@+id/alipay_Check"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/checkbox_style" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/white_corners">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/wexin_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wechat" />
        <TextView

            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/wexin_img"
            android:text="微信" />

        <CheckBox
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:id="@+id/weixin_Check"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/checkbox_style" />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_recharge"
        android:background="@color/red"
        android:textColor="@color/white"
        android:text="确认充值"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
