<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/white_no_corners"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/area_news_info_item"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_common_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/iv_news_info_item_pic"
                    android:src="@drawable/ic_no_loading_default"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"/>

        </LinearLayout>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/iv_news_info_item_pic2"
                        android:src="@drawable/ic_user_head"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                <LinearLayout
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tv_news_info_item_username"
                            android:text="获得者："
                            android:singleLine="true"
                            android:textSize="@dimen/h5"
                            android:textColor="@color/tab_color_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/tv_news_info_item_peopletimes"
                            android:text="本期购买："
                            android:textSize="@dimen/h5"
                            android:textColor="@color/tab_color_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_news_info_item_happycode"
                    android:text="幸运码："
                    android:textSize="@dimen/h5"
                    android:textColor="@color/black_light_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_news_info_item_time"
                    android:text="揭晓时间"
                    android:textSize="@dimen/h5"
                    android:textColor="@color/black_light_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_triangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>

