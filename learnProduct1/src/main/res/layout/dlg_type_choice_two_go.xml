<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="119dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="@drawable/ic_btn_qzb_dlg_bg">

    <TextView
            android:id="@+id/tv_dlg_show_choice1"
            android:layout_marginTop="5dp"
            android:text="新增圈子"
            android:padding="7dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_btn_qzb_addnew"
            android:textSize="@dimen/h4"
            android:textColor="@color/black_dlg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/divider_gray2"
            style="@style/divider_horizontal_style" />

    <TextView
            android:id="@+id/tv_dlg_show_choice2"
            android:text="加入圈子"
            android:padding="7dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_btn_qzb_join"
            android:textSize="@dimen/h4"
            android:textColor="@color/black_dlg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>