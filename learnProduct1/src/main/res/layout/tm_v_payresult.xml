<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    android:orientation="vertical" >

    <include layout="@layout/tm_v_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/tm_i_10"
                android:gravity="center|left"
                android:text="购买出现问题,请联系24小时客服"
                android:textColor="#63ca2c"
                android:textSize="12.0sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tm_t_s0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:drawableLeft="@drawable/tm_i_7"
                    android:gravity="center|left"
                    android:text="客服电话:\n010-57010221"
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="20dp" >

                    <LinearLayout
                        android:layout_width="1.0dip"
                        android:layout_height="25.0dip"
                        android:background="#b8e1a5"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tm_t_s1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:adjustViewBounds="true"
                    android:drawableLeft="@drawable/tm_i_8"
                    android:gravity="center|left"
                    android:text="客服微信:\n2847604950"
                    android:textColor="#666666"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f5fff2" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="购卡极速充,折扣多多,优惠多多!"
                android:textColor="#63ca2c"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="#b8e1a5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="商品名称:"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tm_t_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易支付"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="商品价格:"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tm_t_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.5元"
                android:textColor="#63ca2c"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="支付方式:"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="极速充值卡"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="交易订单:"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tm_t_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/tm_b_b0"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tm_b_0"
            android:onClick="on_Exit"
            android:text="确认完成"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>